mimarmuratdemir.com {
    # API reverse proxy (öncelikli - /api/* istekleri)
    handle /api/* {
        reverse_proxy backend:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Frontend reverse proxy (tüm diğer istekler)
    # Caddy otomatik olarak /.well-known/acme-challenge/* path'ini handle eder
    handle {
        reverse_proxy frontend:80 {
            header_up Host {host}
            header_up X-Real-IP {remote}
            header_up X-Forwarded-For {remote}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Security headers
    header {
        # XSS Protection
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        # HSTS (HTTPS zorunlu)
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    }

    # Gzip compression
    encode gzip zstd

    # Logging
    log {
        output stdout
        format console
    }
}

